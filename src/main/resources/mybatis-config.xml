<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties resource="jdbc.properties"/>

<!--    <settings>-->
<!--        &lt;!&ndash;  显示开启二级缓存    &ndash;&gt;-->
<!--&lt;!&ndash;        <setting name="cacheEnabled" value="true"/>&ndash;&gt;-->
<!--        &lt;!&ndash;  标准的日志工厂实现&ndash;&gt;-->
<!--&lt;!&ndash;        <setting name="logImpl" value="STDOUT_LOGGING"/>&ndash;&gt;-->
<!--        &lt;!&ndash;        <setting name="logImpl" value="LOG4J"/>&ndash;&gt;-->
<!--        &lt;!&ndash;    开启驼峰命名自动映射&ndash;&gt;-->
<!--&lt;!&ndash;        <setting name="mapUnderscoreToCamelCase" value="true"/>&ndash;&gt;-->
<!--&lt;!&ndash;        <setting name="autoMappingBehavior" value="FULL"/>&ndash;&gt;-->
<!--    </settings>-->
    <settings>
        <setting name="autoMappingBehavior" value="FULL"/>
        <setting name="cacheEnabled" value="false"/>

    </settings>

    <typeAliases>
        <package name="com.spm.pojo"/>
    </typeAliases>


    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
                <property name="poolMaximumActiveConnections" value="${maxActive}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/spm/dao/mapper/GradeMapper.xml"/>
        <mapper resource="com/spm/dao/mapper/CourseMapper.xml" />
        <mapper resource="com/spm/dao/mapper/CourseForCjwMapper.xml" />
        <mapper resource="com/spm/dao/mapper/StudentMapper.xml" />
        <mapper resource="com/spm/dao/mapper/StudentGradeMapper.xml" />
        <mapper resource="com/spm/dao/mapper/TeacherMapper.xml" />
        <mapper resource="com/spm/dao/mapper/TeacherRCourseMapper.xml" />
    </mappers>
</configuration>